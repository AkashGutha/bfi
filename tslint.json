{
    /*
     * Possible values:
     * - the name of a built-in config
     * - the name of an NPM module which has a "main" file that exports a config object
     * - a relative path to a JSON file
     */
    "extends": "tslint:recommended",
    "rules": {
        /*
         * Any rules specified here will override those from the base config we are extending
         */
        "no-constructor-vars": true,
        "no-trailing-whitespace": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "class-name": true,
        "comment-format": [
            "check-uppercase"
        ],
        "no-namespace": [
            false
        ],
        "no-var-keyword": true,
        "no-internal-module": true,
        "no-reference": false,
        "curly": true,
        "no-empty": true,
        "align": [
            true,
            "arguments",
            "parameters",
            "statements"
        ],
        "semicolon": [ true, "always" ],
        "no-console": [
            true,
            "debug",
            "error",
            "trace",
            "warn"
        ],
        "no-eval": true,
        "label-position": true,
        "no-unreachable": true

    },
    "rulesDirectory": [
        /*
         * A list of relative or absolute paths to directories that contain custom rules.
         * See the Custom Rules documentation below for more details.
         */
    ]
}
