{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "pretty": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noExternalResolve": true,
        "sourceMap": true,
        "sortOutput": true,
        "outDir": "build/js",
        "newLine": "LF",
        "noImplicitUseStrict": true,
        "noEmitHelpers": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "!build/*"
    ],
    "compileOnSave": true
}
